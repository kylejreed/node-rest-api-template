{
  "extends": "@tsconfig/node16/tsconfig.json",
  "include": ["src"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@utils/*": [
        "./src/utils/*"
      ],
      "@types": [
        "src/main.d.ts"
      ],
      "@/*": [
        "./src/*"
      ],
    },
    "esModuleInterop": true
  }
}